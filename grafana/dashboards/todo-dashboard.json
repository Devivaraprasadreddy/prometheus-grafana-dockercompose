{
  "dashboard": {
    "id": null,
    "title": "ToDo App Metrics",
    "panels": [
      {
        "type": "graph",
        "title": "Todos Added",
        "targets": [{ "expr": "todo_items_added_total" }]
      },
      {
        "type": "graph",
        "title": "Todos Deleted",
        "targets": [{ "expr": "todo_items_deleted_total" }]
      },
      {
        "type": "graph",
        "title": "Current Todos",
        "targets": [{ "expr": "todo_items_total" }]
      },
      {
        "type": "graph",
        "title": "Node CPU Usage",
        "targets": [{ "expr": "rate(node_cpu_seconds_total[1m])" }]
      },
      {
        "type": "graph",
        "title": "Node Memory Usage",
        "targets": [{ "expr": "node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes" }]
      }
    ],
    "schemaVersion": 16,
    "version": 0
  }
}
